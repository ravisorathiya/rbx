<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".RBXApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rbx" >
        <activity
            android:name=".core.splash.SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.RBXCalculator.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.result.CalResultActivity"
            android:exported="false"
            android:label="@string/title_activity_cal_result"
            android:screenOrientation="nosensor"

            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.calc.CalcActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_calc"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.quiz.QuizActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_quiz"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".core.settings.SettingActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.sctach.ScrtachCardActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_scrtach_card"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.spin.SpinActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_spin"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.memes.MemesActivity"
            android:screenOrientation="nosensor"
            android:exported="false"
            android:label="@string/title_activity_memes"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.tips.detail.TipDetailActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_tip_detail"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.tips.tip.TipsActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:label="@string/title_activity_tips"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name=".screens.main.MainActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:label="@string/app_name"
            android:theme="@style/Theme.Rbx" />
    </application>

</manifest>