            android:name="com.sfinfotech.rblxcal.screens.tips.detail.TipDetailActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name="com.sfinfotech.rblxcal.screens.tips.tip.TipsActivity"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Rbx" />
        <activity
            android:name="com.sfinfotech.rblxcal.screens.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/Theme.Rbx" />
    </application>

</manifest>