<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Rbx" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.RBXCalculator.Splash" parent="Theme.SplashScreen">
        <!-- Black background -->
        <item name="windowSplashScreenBackground">@android:color/black</item>

        <!-- Static centered icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Remove icon background circle -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Disable system icon animation -->
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.Rbx</item>
    </style>


</resources>